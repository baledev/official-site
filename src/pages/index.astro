---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navigation from "../components/Navigation.astro";
import Hero from "../components/Hero.astro";
import ProjectCard from "../components/ProjectCard.astro";
import Footer from "../components/Footer.astro";
import { getCollection } from "astro:content";
import { useTranslations, getLocalizedPath } from "../i18n/utils";

const t = useTranslations("id");

// Get featured projects in Indonesian
const allProjects = await getCollection("projects", ({ data }) => {
  return data.lang === "id" && data.featured === true;
});

const featuredProjects = allProjects
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);

// Get latest blog posts in Indonesian
const allPosts = await getCollection("blog", ({ data }) => {
  return data.lang === "id";
});

const latestPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BaseLayout
  title="Hermansyah - Backend & Fullstack Developer"
  description="Saya adalah seorang backend developer yang berpengalaman dengan Golang, Python, dan Rust, serta fullstack developer untuk aplikasi Laravel."
  lang="id"
>
  <Navigation />
  <Hero />

  <!-- Featured Projects Section -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold mb-4 text-zinc-900 dark:text-zinc-100">
        {t("projects.featured")}
      </h2>
      <p class="text-lg text-zinc-600 dark:text-zinc-400">
        Beberapa proyek unggulan yang telah saya kerjakan
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {
        featuredProjects.map((project) => (
          <ProjectCard
            title={project.data.title}
            description={project.data.description}
            techStack={project.data.techStack}
            href={`/projects/${project.slug.split("/").pop()}`}
          />
        ))
      }
    </div>

    <div class="text-center">
      <a
        href={getLocalizedPath("/projects", "id")}
        class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-500 to-purple-500 text-white font-semibold rounded-lg hover:shadow-lg hover:scale-105 transition-all duration-300"
      >
        {t("projects.viewAll")}
        <svg
          class="w-5 h-5 ml-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </section>

  <!-- Latest Blog Posts Section -->
  <section
    class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 bg-zinc-50 dark:bg-zinc-800/50"
  >
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold mb-4 text-zinc-900 dark:text-zinc-100">
        {t("blog.latest")}
      </h2>
      <p class="text-lg text-zinc-600 dark:text-zinc-400">
        Tulisan terbaru seputar teknologi dan pengembangan web
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {
        latestPosts.map((post) => (
          <article class="card-hover bg-white dark:bg-zinc-800 rounded-xl overflow-hidden shadow-lg flex flex-col h-full">
            {post.data.coverImage && (
              <div class="aspect-video overflow-hidden">
                <img
                  src={post.data.coverImage}
                  alt={post.data.title}
                  class="w-full h-full object-cover hover:scale-110 transition-transform duration-500"
                />
              </div>
            )}
            {!post.data.coverImage && (
              <div class="aspect-video overflow-hidden bg-gradient-to-br from-green-500/20 to-teal-500/20 flex items-center justify-center">
                <span class="text-4xl">üìù</span>
              </div>
            )}

            <div class="p-6 flex-1 flex flex-col">
              <div class="mb-4">
                <span class="text-sm text-zinc-500 dark:text-zinc-400">
                  {post.data.pubDate.toLocaleDateString("id-ID", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })}
                </span>
              </div>
              <h3 class="text-2xl font-bold mb-3 text-zinc-900 dark:text-zinc-100 line-clamp-2">
                <a
                  href={`/blog/${post.slug.split("/")[1]}`}
                  class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                >
                  {post.data.title}
                </a>
              </h3>

              <p class="text-zinc-600 dark:text-zinc-400 mb-6 line-clamp-3">
                {post.data.description}
              </p>

              <div class="mt-auto">
                <a
                  href={`/blog/${post.slug.split("/")[1]}`}
                  class="inline-flex items-center text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300 font-semibold transition-colors"
                >
                  <span>{t("blog.readMore")}</span>
                  <svg
                    class="w-4 h-4 ml-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17 8l4 4m0 0l-4 4m4-4H3"
                    />
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))
      }
    </div>

    <div class="text-center">
      <a
        href={getLocalizedPath("/blog", "id")}
        class="inline-flex items-center px-6 py-3 border-2 border-zinc-900 dark:border-zinc-100 text-zinc-900 dark:text-zinc-100 font-semibold rounded-lg hover:bg-zinc-900 hover:text-white dark:hover:bg-zinc-100 dark:hover:text-zinc-900 transition-all duration-300"
      >
        {t("blog.viewAll")}
        <svg
          class="w-5 h-5 ml-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </section>

  <Footer />
</BaseLayout>
