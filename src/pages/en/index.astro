---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Hero from '../../components/Hero.astro';
import ProjectCard from '../../components/ProjectCard.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';
import { useTranslations, getLocalizedPath } from '../../i18n/utils';

const t = useTranslations('en');

// Get featured projects in English
const allProjects = await getCollection('projects', ({ data }) => {
  return data.lang === 'en' && data.featured === true;
});

const featuredProjects = allProjects.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf()).slice(0, 3);
---

<BaseLayout
  title="Hermansyah - Backend & Fullstack Developer"
  description="I am an experienced backend developer with Golang, Python, and Rust, as well as a fullstack developer for Laravel applications."
  lang="en"
>
  <Navigation />
  <Hero />
  
  <!-- Featured Projects Section -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold mb-4 text-zinc-900 dark:text-zinc-100">
        {t('projects.featured')}
      </h2>
      <p class="text-lg text-zinc-600 dark:text-zinc-400">
        Some of the featured projects I've worked on
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {featuredProjects.map((project) => (
        <ProjectCard
          title={project.data.title}
          description={project.data.description}
          techStack={project.data.techStack}
          href={`/en/projects/${project.slug}`}
        />
      ))}
    </div>
    
    <div class="text-center">
      <a
        href={getLocalizedPath('/projects', 'en')}
        class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-500 to-purple-500 text-white font-semibold rounded-lg hover:shadow-lg hover:scale-105 transition-all duration-300"
      >
        {t('projects.viewAll')}
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </section>
  
  <Footer />
</BaseLayout>
